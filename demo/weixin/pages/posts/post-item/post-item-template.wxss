/* pages/posts/post-item/post-item-template.wxss */

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #dedeed;
  border-bottom: 1px solid #dedeed;
  padding-bottom: 20rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.post-author {
  height: 60rpx;
  width: 60rpx;
  vertical-align: center;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: center;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-conetent {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.post-like-image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.post-like-font {
  margin-right: 40rpx;
}
